name: Validate lib-pcg-algots

on:
  workflow_call:

jobs:
  validate:
    runs-on: "ubuntu-latest"
    steps:
      - name: Checkout source code
        uses: actions/checkout@v4

      - name: Use Node.js lts
        uses: actions/setup-node@v3
        with:
          node-version: lts
          cache: 'npm'

      - name: Set up Python 3.12
        uses: actions/setup-python@v5
        with:
          python-version: "3.12"
          cache: "poetry"

      - name: Install algokit
        run: pipx install algokit

      - name: Install puya compiler
        run: pipx install puya

      - name: Start LocalNet
        run: algokit localnet start

      - name: Bootstrap dependencies
        run: algokit project bootstrap all --project-name 'lib-pcg-algots'

      - name: Configure git
        shell: bash
        run: |
          # set git user and email as test invoke git
          git config --global user.email "actions@github.com" && git config --global user.name "github-actions"


      - name: Audit dependencies
        run: algokit project run audit --project-name 'lib-pcg-algots'



      - name: Lint and format
        run: algokit project run lint --project-name 'lib-pcg-algots'



      - name: Run tests
        shell: bash
        run: |
          set -o pipefail
          algokit project run test --project-name 'lib-pcg-algots'


      - name: Build smart contracts
        run: algokit project run build --project-name 'lib-pcg-algots'

      - name: Scan TEAL files for issues
        run: algokit project run audit-teal --project-name 'lib-pcg-algots'

      # # Uncomment to enable TEAL static analysis with snapshoting using Tealer package
      # # Would first require running locally using audit-teal command and committing the snapshots into source control
      # # Please note, tealer has a known bug that may result in large snapshot file sizes, track resolution here:
      # # https://github.com/crytic/tealer/issues/101
      # - name: Check output stability of the smart contracts
      #   run: algokit project run ci-teal-diff --project-name 'lib-pcg-algots'

      - name: Run deployer against LocalNet
        run: algokit project deploy localnet --project-name 'lib-pcg-algots'
